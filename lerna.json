{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "ignoreChanges": ["**/*.md"],
      "conventionalCommits": true,
      "amend": true,
      "changelogPreset": "conventional-changelog-conventionalCommits"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
